solution:-

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
	    for(int i=0;i<T;i++){
	        int x=sc.nextInt();
	        int y=sc.nextInt();
	        int result=((x*4)+y);
	        System.out.println(result);
	    }
	}
}
